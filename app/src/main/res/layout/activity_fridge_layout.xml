<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FridgeLayout"
    android:background="@drawable/app_bg">

    <LinearLayout
        android:id="@+id/llTopBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_back_arrow"/>
        <TextView
            android:id="@+id/tvFridgeNameBanner"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Fridge Name"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"
            android:textAlignment="center"
            android:background="@drawable/banner_bg"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:padding="10dp" />
        <ImageButton
            android:id="@+id/imgBtnAddParticipants"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_friend_request"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvPickContainer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Pick the compartment you would like to open"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/llTopBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".05"/>

    <TextView
        android:id="@+id/freezerTop"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPickContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".05"
        android:text="Freezer"
        android:padding="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:background="@drawable/freezer_bg"/>
    <TextView
        android:id="@+id/shelfMiddle"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/freezerTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:text="Shelf"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:padding="70dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/shelf_bg"/>

    <TextView
        android:id="@+id/drawerBottom"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/shelfMiddle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:text="Drawer"
        android:padding="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:background="@drawable/drawer_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>