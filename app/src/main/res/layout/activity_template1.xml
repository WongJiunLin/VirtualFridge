<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".template1">

    <TextView
        android:id="@+id/chooseTemplateBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please choose your fridge template"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".05"
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"/>

    <EditText
        android:id="@+id/edtFridgeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type Fridge Name Here"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/chooseTemplateBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintWidth_percent=".8"/>

    <TextView
        android:id="@+id/freezerTop"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/chooseTemplateBanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".2"
        android:text="Freezer"
        android:padding="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/freezer_bg"
        android:onClick="chooseItemPosition"/>
    <TextView
        android:id="@+id/shelfMiddle1"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/freezerTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:text="Shelf"
        android:padding="10dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/shelf_bg"
        android:onClick="chooseItemPosition"/>

    <TextView
        android:id="@+id/shelfMiddle2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/shelfMiddle1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:text="Shelf"
        android:padding="10dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/shelf_bg"
        android:onClick="chooseItemPosition"/>

    <TextView
        android:id="@+id/shelfMiddle3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/shelfMiddle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:text="Shelf"
        android:padding="10dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/shelf_bg"
        android:onClick="chooseItemPosition"/>

    <TextView
        android:id="@+id/drawerBottom1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/shelfMiddle3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.21"
        android:text="Drawer"
        android:padding="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/drawer_bg"
        android:onClick="chooseItemPosition"/>

    <TextView
        android:id="@+id/drawerBottom2"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/shelfMiddle3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drawerBottom1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        android:text="Drawer"
        android:padding="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/drawer_bg"
        android:onClick="chooseItemPosition"/>

    <Button
        android:id="@+id/chooseTemplateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/chooseTemplateBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".95"/>



</androidx.constraintlayout.widget.ConstraintLayout>